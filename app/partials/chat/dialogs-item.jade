a.dialogs-item(ng-click='select(dialogItem.peer.id)', ui-sref='chat.peer({peerId: dialogItem.peer.id})', ng-class='{"dialogs-item_active": peerId == dialogItem.peer.id || selectedPeerId == dialogItem.peer.id}')
  div.dialogs-item__inner
    div.dialogs-item__avatar
      div.md-avatar.group-users__user-photo(ng-class='{"group-users__user-photo_type_admin": dialogItem.peer.isAdmin}')

    div.dialogs-item__message
      div.dialogs-item__title {{ dialogItem.peer.fullName }}
      div.dialogs-item__last-message(ng-if='dialogItem.headMessage && dialogItem.headMessage.id')
        span {{ dialogItem.headMessage.message }}
        div.dialogs-item__read-indicator(ng-if='!dialogItem.headMessage.isRead')


    div.dialogs-item__time(ng-if='dialogItem.headMessage && dialogItem.headMessage.id')
      | {{ dialogItem.headMessage.postAtMs | date:'dd.MM.yyyy Ð² HH:mm' }}