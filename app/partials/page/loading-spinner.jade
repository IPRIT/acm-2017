.loader
  .loader-inner
    svg(xmlns='http://www.w3.org/2000/svg', fit, viewbox='0 0 100 100', width='100%', height='100%', preserveaspectratio='xMidYMid meet', focusable='false')
      defs
        mask#mask(x='0', y='0', width='100%', height='100%')
          rect#overlay(x='0', y='0', width='100%', height='100%')
          rect#circle.bk(x='0', y='0', width='100%', height='100%', fill='none')
          circle(cx='50%', cy='50%', r='40%', stroke='rgba(0,0,0,0)', fill='none', stroke-width='10', stroke-linecap='round')
          circle(cx='50%', cy='50%', r='40%', stroke='#000', fill='none', stroke-width='6', stroke-linecap='round')
          animate(attributename='stroke-dashoffset', dur='1.5s', repeatcount='indefinite', from='0', to='-502')
            animate(attributename='stroke-dasharray', dur='2s', repeatcount='indefinite', values='150.6 100.4;1 250;150.6 100.4')
      rect(x='0', y='0', width='100%', height='100%')