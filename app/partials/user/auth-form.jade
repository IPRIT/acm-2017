div
  div.auth-form
    div.auth-form__inner
      div.auth-form__title
        div.auth-form__logo
          img.img(src='/img/acm-logo-blue-circle-filled.png')
      div.auth-form__form
        form.form(ng-submit='submitForm()', name='authForm')

          div.auth-form__row
            md-input-container(style='margin-bottom: 0')
              label(qemy-i18n='auth-login')
              input(required, name="username", ng-model="form.login")
              div(ng-messages="authForm.username.$error")
                div(ng-message="required", qemy-i18n='required')

          div.auth-form__row
            md-input-container
              label(qemy-i18n='auth-password')
              input(required, type='password', name="password", ng-model="form.password")
              div(ng-messages="authForm.password.$error")
                div(ng-message="required", qemy-i18n='required')


          div.auth-form__row(layout='row', layout-align='space-between center', style='text-align: right;')
            md-button(ui-sref='auth.forget-password-form', qemy-i18n='auth-forget-password')
            md-button.md-primary(type='submit', ng-disabled='form.login.length === 0 || form.password.length === 0', qemy-i18n='auth-sign-in')

  page-footer
