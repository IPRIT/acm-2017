div.contest(style='margin-top: 0')
    style.
        .page__inner {
            width: 100%;
        }
    div.contest__content(style='max-width: 100%')
        div.contest__inner
            div.contest__title-section
                h2(ng-bind='user.fullName', ng-if="!user.isSupervisor")
                h2(ng-if="user.isSupervisor", qemy-i18n='contest-solutions-users-all')

            div.status-content
                md-content
                    md-nav-bar.md-primary(md-selected-nav-item="selectedTabIndex", nav-bar-aria-label="Solutions")
                        md-nav-item.md-primary(md-nav-click="showSolutions('all')", name="0", ng-if='user.isSupervisor')
                            span(qemy-i18n='contest-solutions-users-all')
                        md-nav-item.md-primary(md-nav-click="showSolutions('all')", name="0", ng-if='!user.isSupervisor')
                            span(qemy-i18n='contest-solutions-all')
                        socket-status.contest__socket-status
                    include ./solutions-content
                    include ./pagination

    page-footer