div.task__files
  div.task__file-wrap(ng-repeat='file in condition.attachments.files | orderBy:" file.type"',
                      ng-class='{ "task__file-wrap_full": (file.embedUrl || (file.url && file.type === "pdf")) && condition.attachments.config.files_show_embed }')
    div(ng-switch='file.embedUrl && condition.attachments.config.files_show_embed')
      div(ng-switch-when='true')
        div.task__file-preview
          iframe(ng-if='file.embedUrl && (typeof(file.embedUrl) === "string")', src='{{ file.embedUrl }}')

      div(ng-switch-default)
        a.link(tabindex='{{$index}}', ng-href='{{file.url}}', target='_blank')
          div.task__file
            div.task__file-title {{file.title ? file.title : "Statement" + (condition.attachments.files.length > 1 ? (" " + ($index + 1)) : "")}}
            div.task__file-ext
              div(class='task__file-ext-icon task__file-ext-icon_type_{{file.type}}')
              span {{file.type}}